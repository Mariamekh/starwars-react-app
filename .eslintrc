{
    "ecmaFeatures": {
        "modules": true,
        "spread": true,
        "restParams": true
    },
    "extends": [
        "plugin:prettier/recommended", 
        "eslint:recommended",
        "plugin:react/recommended" 
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "no-unused-vars": "off",
        "no-undef": 2,
        "react/react-in-jsx-scope": "off",
        "prettier/prettier": [
            "error",
            {
              "endOfLine": "auto"
            }
          ]
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ]
}